<Window x:Class="BlackJack_WPF.InsuranceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="InsuranceWindow" Height="400" Width="500">
    <Grid Background="#FF0A9500">
        <Canvas Margin="10,10,10,31">
            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Foreground="White" FontSize="14" Text="&#xA;Insurance happens when the face card of the dealer is an ace. &#xD;&#xA;If the dealer gets a blackjack from that hand, insurance is paid out regardless of game outcome.&#xA;&#xA;House rule:  &#xA;You can bet a maximum of half the current bet on insurance.&#xA;&#xA;Enter your insurance bet:" Height="170" Canvas.Top="46" Width="480"/>
            <TextBlock TextAlignment="Center" TextWrapping="Wrap" Text="Insurance Pays 2:1" FontSize="36" FontFamily="Algerian" Height="55" Width="480"/>
            <TextBox x:Name="ins" TextChanged="TextBox_TextChanged" Height="61" Canvas.Left="127" Canvas.Top="221" Width="227"/>
            <Button x:Name="ins_b" Content="PLACE" FontSize="24" FontFamily="Algerian" Background="#FF0B6D00" IsEnabled="False" Click="ins_b_Click" Height="40" Canvas.Left="188" Canvas.Top="303" Width="105"/>
        </Canvas>
    </Grid>
</Window>
